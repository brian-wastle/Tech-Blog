<div class="col-md-6">
    <h3>Update Your Post:</h3>

    <form class="form edit-project-form">
      <div class="form-group">
        <label for="project-name">Post Name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" value="{{name}}"/>
      </div>
      <div class="form-group">
        <label for="project-desc">Edit your Post:</label>
        <textarea class="form-input" id="project-desc" name="project-desc" rows="10" cols="40">{{description}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Post</button>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="del-button" data-id="{{blog.id}}">DELETE</button>
      </div>
    </form>
  </div>

  <script src="../js/editBlog.js"></script>
